# Clippy Multi-User Environment Configuration
# Copy this file to .env and fill in your values

# MongoDB Configuration
# For Laragon, MongoDB runs on localhost:27017 by default
MONGODB_URI=mongodb://localhost:27017/clippy

# Security Keys
SECRET_KEY=your_flask_secret_key_here
TOKEN_ENCRYPTION_KEY=your_encryption_key_here

# Google OAuth (from client_secrets.json)
# These are optional - the app will read from client_secrets.json if not set
# GOOGLE_CLIENT_ID=your_client_id.apps.googleusercontent.com
# GOOGLE_CLIENT_SECRET=your_client_secret

# TikTok OAuth Configuration (optional - for TikTok upload support)
# Get these from https://developers.tiktok.com after creating an app
TIKTOK_CLIENT_KEY=your_tiktok_client_key
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret

# App Configuration
FLASK_ENV=development
FLASK_DEBUG=True
